{
    "require": {
        "php": ">=7.2",
        "phlexus/phlexus-core": "dev-master",
        "phlexus/phlexus-admin-module": "dev-master",
        "phlexus/phlexus-tabler-admin-theme": "dev-master",
        "oomphinc/composer-installers-extender": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "Phlexus\\": "src/"
        }
    },
    "extra": {
        "installer-types": [
            "library"
        ],
        "installer-paths": {
            "themes/{$name}/": [
                "phlexus/phlexus-tabler-admin-theme"
            ]
        }
    },
    "scripts": {
        "post-package-install": "Phlexus\\ThemeManager::install",
        "post-package-update": "Phlexus\\ThemeManager::update",
        "post-package-uninstall": "Phlexus\\ThemeManager::uninstall"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
